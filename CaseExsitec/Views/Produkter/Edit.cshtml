@model CaseExsitec.Models.Produkter

@{
    ViewData["Title"] = "Edit";
}

<h1>Produkter</h1>

<h4>Rediger</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Produktnr" class="control-label"></label>
                <input asp-for="Produktnr" class="form-control" />
                <span asp-validation-for="Produktnr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produkt" class="control-label"></label>
                <input asp-for="Produkt" class="form-control" />
                <span asp-validation-for="Produkt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pris" class="control-label"></label>
                <input asp-for="Pris" class="form-control" />
                <span asp-validation-for="Pris" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="margin-top: 10px;" type="submit" value="Lagre" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 10px; padding-left: 7px;">
    <a asp-action="Index">Tilbake</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
